<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--    Style para Boton Enviar-->
    <style name="AppTheme.styleButtonEnviar" parent="AppTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:width">250dp</item>
        <item name="android:height">42dp</item>
        <item name="android:textColor">@color/colorEnButton</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:colorBackground">@color/colorF9</item>
    </style>

<!--    Style para TextView en Form-->
    <style name="AppTheme.styleTextView" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorF9</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">300dp</item>
    </style>

<!--    Style para TextView en Form-->
<style name="AppTheme.styleTextViewMensaje" parent="AppTheme">
    <item name="android:fontFamily">@font/roboto</item>
    <item name="android:textColor">@color/colorF9</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:width">300dp</item>
</style>

<!--    Style para EditText en Form-->
    <style name="AppTheme.styleEditText" parent="AppTheme">
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
    </style>

    <!--    Style para Spinner en Form-->
    <style name="AppTheme.styleSpinner" parent="AppTheme">
        <item name="android:background">@drawable/edittext_shape</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
    </style>

    <style name="AppTheme.styleTextViewVerColeccion" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorBlancoBITLAB</item>
    </style>

<!--    Style para TextView en FragmentSuccess-->
    <style name="AppTheme.style_tv_descripcion_fg_success">
        <item name="android:textColor">#5B0DAF</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>

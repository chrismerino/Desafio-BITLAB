<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--    Style para Boton Enviar-->
    <style name="AppTheme.styleButtonEnviar" parent="AppTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:width">225dp</item>
        <item name="android:background">@drawable/button_shape</item>
    </style>

<!--    Style para TextView en Form-->
    <style name="AppTheme.styleTextView" parent="AppTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">300dp</item>
    </style>

<!--    Style para EditText en Form-->
    <style name="AppTheme.styleEditText" parent="AppTheme">
        <item name="android:drawable">@drawable/edittext_shape</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


</resources>
